{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "node_modules/@types/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
