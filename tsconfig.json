{
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "~assets": [
        "./assets/*"
      ]
    },
  },
  "include": [
    "**/*",
    ".eslintrc.js",
    "babel.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
